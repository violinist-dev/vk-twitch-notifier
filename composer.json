{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=7.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "doctrine/annotations": "^1.6",
        "doctrine/doctrine-bundle": "^1.9",
        "doctrine/doctrine-migrations-bundle": "^1.3",
        "doctrine/orm": "^2.6",
        "myclabs/php-enum": "^1.6",
        "symfony/console": "*",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "*",
        "symfony/orm-pack": "^1.0",
        "symfony/serializer": "*",
        "symfony/validator": "*",
        "symfony/yaml": "*"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^5.0",
        "phpunit/phpunit": "^7.4",
        "symfony/browser-kit": "*",
        "symfony/dotenv": "*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "post-install-cmd": [
            "php bin/console cache:clear"
        ],
        "post-update-cmd": [
            "php bin/console cache:clear"
        ],
        "app:test": [
            "php bin/console cache:clear --env=test",
            "php -d memory_limit=2048M vendor/bin/phpunit --configuration phpunit.xml"
        ],
        "app:test-with-coverage": [
            "php bin/console cache:clear --env=test",
            "php -d memory_limit=2048M vendor/bin/phpunit --configuration phpunit.xml --coverage-text --colors=never"
        ]
    },
    "scripts-descriptions": {
        "app:test": "Run tests.",
        "app:test-with-coverage": "Run tests with coverage report."
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.1.*"
        }
    }
}
